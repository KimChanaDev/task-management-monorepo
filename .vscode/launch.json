{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Auth App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/auth-service/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "auth", "--debug", "--watch"],
      "cwd": "${workspaceFolder}/apps/auth-service",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/apps/auth-service/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/auth-service/dist/**/*.js"],
      "runtimeArgs": ["--inspect-brk=9229"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Task App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/task-service/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "task", "--debug", "--watch"],
      "cwd": "${workspaceFolder}/apps/task-service",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/apps/task-service/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/task-service/dist/**/*.js"],
      "runtimeArgs": ["--inspect-brk=9229"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Graphql Gateway App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/apps/graphql-gateway/node_modules/@nestjs/cli/bin/nest.js",
      "args": ["start", "graphql-gateway", "--debug", "--watch"],
      "cwd": "${workspaceFolder}/apps/graphql-gateway",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/apps/graphql-gateway/.env",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/apps/graphql-gateway/dist/**/*.js"],
      "runtimeArgs": ["--inspect-brk=9229"],
      "env": {
        "NODE_ENV": "development"
      }
    },
  ],
  "compounds": [
    {
      "name": "Debug All Microservices",
      "configurations": [
        "Debug Auth App",
        "Debug Task App",
        "Debug Graphql Gateway App"
      ],
      "stopAll": true,
      "presentation": {
        "group": "microservices",
        "order": 1
      }
    }
  ]
}
