generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client/task-service"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  priority    TaskPriority @default(MEDIUM)
  status      TaskStatus   @default(TODO)
  dueDate     DateTime?
  createdBy   String
  assignedTo  String?
  createdAt   DateTime     @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime     @updatedAt @db.Timestamptz(6)
  isDeleted   Boolean      @default(false)

  @@index([createdBy])
  @@index([assignedTo])
  @@index([status])
  @@index([priority])
  @@map("tasks")
}
