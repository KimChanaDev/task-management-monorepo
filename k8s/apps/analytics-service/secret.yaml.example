# ============================================
# Analytics Service Secret Template
# ============================================
# Copy this file to secret.yaml and fill in the values
# cp secret.yaml.example secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: analytics-service-secret
  namespace: task-platform-apps
type: Opaque
stringData:
  # TimescaleDB connection string for Prisma
  # Note: Uses TimescaleDB, not regular PostgreSQL
  database-url: "postgresql://<USER>:<PASSWORD>@timescaledb.task-platform-infra.svc.cluster.local:5432/<DATABASE>?schema=analytics"
