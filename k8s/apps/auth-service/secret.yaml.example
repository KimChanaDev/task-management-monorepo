# ============================================
# Auth Service Secret Template
# ============================================
# Copy this file to secret.yaml and fill in the values
# cp secret.yaml.example secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: auth-service-secret
  namespace: task-platform-apps
type: Opaque
stringData:
  # PostgreSQL connection string for Prisma
  # Format: postgresql://[user]:[password]@[host]:[port]/[database]?schema=[schema]
  database-url: "postgresql://<USER>:<PASSWORD>@postgres.task-platform-infra.svc.cluster.local:5432/<DATABASE>?schema=auth"
  
  # JWT Secret for signing tokens (minimum 32 characters recommended)
  jwt-secret: "<JWT_SECRET>"
