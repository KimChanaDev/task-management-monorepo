# ============================================
# Task Service Secret Template
# ============================================
# Copy this file to secret.yaml and fill in the values
# cp secret.yaml.example secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: task-service-secret
  namespace: task-platform-apps
type: Opaque
stringData:
  # PostgreSQL connection string for Prisma
  database-url: "postgresql://<USER>:<PASSWORD>@postgres.task-platform-infra.svc.cluster.local:5432/<DATABASE>?schema=task"
