# ============================================
# MinIO Secret Template
# ============================================
# Copy this file to secret.yaml and fill in the values
# cp secret.yaml.example secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: minio-secret
  namespace: task-platform-infra
type: Opaque
stringData:
  root-user: <ROOT_USER>       # MinIO root username
  root-password: <ROOT_PASSWORD>   # MinIO root password (min 8 chars)
